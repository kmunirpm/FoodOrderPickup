<!DOCTYPE html>
<html lang="en">

<head>
  <title>Food To Go</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>
  <!-- This brings in the ejs from partials/_header.ejs -->
  <%- include('partials/_header') %>
  <main>

    <!-- SECTION 1 -->
    <!-- Middle of homepage  -  2 column layout for Welcome to Homepage and How to Order-->
    <div class='middle-page-wrapper'>
      <div class='row'>
        <div class='column'>
          <div class='welcome-to-homepage'>
            <h1>Welcome to Homepage!</h1>
            <h2>This is a Food Order Pick-Up App that allows </br> users to order on the go!</h2>
          </div>
        </div>
        <div class='column'>
          <div class='how-to-order'>
            <h1>How to Order!</h1>
            <h2>
              <ul>
                <li>Choose your favourite meal</li>
                <li>Add to your cart</li>
                <li>Place your order!</li>
              </ul>
            </h2>
          </div>
        </div>
      </div>
    </div>

    <!-- SECTION 2 -->
    <!-- Menu Options -->
    <div class='menu-page-wrapper'>
      <div class='row'>
        <% console.log('menu: ', menu)%>
        <% menu.forEach(function(menu) { %>
          <div class='column'>
            <div class='menu'>
              <h2><%= menu.name %></h2>
              <img class="menu-image" src="<%= menu.picture_url %>" alt="menu1" />
              <div><%= menu.description %></div>
              <div class="menu-price-and-add">
                <h3>$<%= menu.price_in_cents/100 %></h3>
                <form method="POST" action="/orders/cart/"><input type="hidden" name="pid" value="<%= menu.id %>"><button type="submit" class="add-button">+</button></form>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>

  </main>




</body>

</html>
